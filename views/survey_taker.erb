

<% if @surveys.any?()  %>
<ul>
  <h1>Here are your surveys</h1>
  <% @surveys.each() do |survey| %>
    <p>
      <%= survey.name() %>
    </p>

    <% if survey.questions().any?() %>
      <% survey.questions().each() do |question| %>
         <p>
           <%= question.query() %>
         </p>
         <form action="/thank_you" method="post">
           <% if question.answers().any?() %>
             <select id="answer_select" name="answer_select" type="text">
               <% question.answers().each() do |answer| %>
                <option id="option_<%= answer.id() %>" value="<%= answer.id() %>"><%= answer.name() %></option>
               <% end %>
             </select>
            <% else %>
              <label for="answer">Answer</label>
              <input type="text" name="answer" id="answer" class="form-control">
            <% end %>
         <button type="submit" class="btn btn-success">Submit</button>
       </form>

       <% end %>
     <% else %>
      <p>
        Ooops, there aren't any questions for this survey!
      </p>
     <% end %>

  <% end %>
</ul>

<% else %>

<h2>Oops, there aren't any surveys yet!  Sorry :(</h2>

<% end %>
