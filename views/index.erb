<h1>Welcome to Surveyr</h1>

<% if @surveys.any?() %>
  <h2>Here are your Surveys:</h2>
  <ul>
    <% @surveys.each() do |survey| %>
      <li><a href="/surveys/<%= survey.id() %>"><%= survey.name() %></a> </li>
    <% end %>
  </ul>
<% else %>
<p>
  You don't have any surveys yet!
</p>
<% end %>

<h2>Create a New Survey</h2>
<form class="form-group" action="/" method="post">
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" class="form-control">
  <button type="submit" class="btn">Submit</button>
</form>

<br>
<a href="/survey_taker" class="btn"><h2>Take Survey</h2></a>
